#!/bin/sh

INSTALLDIR=./packages/gnome-core
EXTRADIR=$INSTALLDIR/build/extra
TMPDIR=./build-gnome-core

for i in gconf libglade glib gnome-keyring gnome-vfs libart_lgpl \
libbonobo libbonoboui libgnome libgnomecanvas libgnomeui \
libtasn1 orbit2 popt xdg-utils xdg-user-dirs shared-mime-info; do
	repackage $i -t $TMPDIR
	cp -Prf $TMPDIR/$i/* $INSTALLDIR/.
	rm -rf $TMPDIR
done
rm -rf $INSTALLDIR/lib/locale
cp -Prf $EXTRADIR/* $INSTALLDIR/.

returnval=$?

exit $returnval
