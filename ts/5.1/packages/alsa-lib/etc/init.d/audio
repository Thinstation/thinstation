#!/bin/sh                                                                                                                                                                                       
IFS="                                                                                                                                                                                           
"                                                                                                                                                                                               
. $TS_GLOBAL                                                                                                                                                                                    
                                                                                                                                                                                                
case "$1" in                                                                                                                                                                                    
init)                                                                                                                                                                                           
        if ! pkg_initialized $PACKAGE; then                                                                                                                                                     
                if [ -e /bin/arecord ] ; then                                                                                                                                                   
                        arecord -d 1 -N                                                                                                                                                         
                fi                                                                                                                                                                              
                controls=`amixer | grep "Simple mixer control" | cut -c 22-`                                                                                                                    
                for control in $controls ; do                                                                                                                                                   
                        features=`amixer sget $control`                                                                                                                                         
                        if echo $features | grep -q "Capture channels" ; then                                                                                                                   
                                amixer sset $control $MIC_LEVEL% unmute                                                                                                                         
                        fi
                        if echo $features | grep -q "Playback channels" ; then
                                amixer sset $control $AUDIO_LEVEL% unmute
                        fi
                done
                pkg_set_init_flag $PACKAGE
        fi
        ;;
help)
        echo "Usage: $0 init"
        ;;
*)
        exit 1
        ;;
esac
exit 0