# Description: The GNOME Desktop
# URL: www.gnome.org
# Maintainer: None

name=gnome-desktop
version=2.32.1
release=1
source=(ftp://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	sed -i -e "s/USE_NLS=yes/USE_NLS=no/" \
		-e "s/ENABLE_NLS 1/ENABLE_NLS 0/" configure
	./configure --prefix=/usr --disable-static --disable-nls --disable-scrollkeeper \
		--disable-desktop-docs --disable-gtk-doc
	make
	make install DESTDIR=$PKG
	rm -rf $PKG/usr/share/gtk-doc
}
