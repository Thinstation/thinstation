name=libgudev
version=233
release=1

build() {
  git clone https://git.gnome.org/browse/libgudev
  cd $name
  NOCONFIGURE=1 ./autogen.sh
  ./configure \
    --prefix=/usr \
    --enable-gtk-doc \
    --disable-umockdev
  sed -i 's/ -shared / -Wl,-O1,--as-needed\0/g' -i libtool
  make
  make DESTDIR="$PKG" install
}

# vim:set ts=2 sw=2 et:
