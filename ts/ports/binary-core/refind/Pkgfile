# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=refind
version=0.11.0
release=1
source=(https://razaoinfo.dl.sourceforge.net/project/refind/$version/refind-bin-$version.zip)

build() {
	cd ${name}-bin-$version

	mkdir -p $PKG/boot/efi/EFI/refind
	mv refind/* $PKG/boot/efi/EFI/refind/.
	mv {keys,docs,fonts,banners} $PKG/boot/efi/EFI/refind/.

	# Remove ARM binaries
	rm -rf $PKG/boot/efi/EFI/refind/*aa64*
}
