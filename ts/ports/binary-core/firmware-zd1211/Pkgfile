name=firmware-zd1211
version=1.5
release=1
source=(http://ayera.dl.sourceforge.net/project/zd1211/zd1211-firmware/$version/zd1211-firmware-$version.tar.bz2)

build() {
	mkdir -p $PKG/lib/firmware
	mv zd1211-firmware $PKG/lib/firmware/zd1211
	rm $PKG/lib/firmware/zd1211/{*.h,COPYING,README}
}
