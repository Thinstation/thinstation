# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=cryptodev-linux
version=1.6
release=3.12.15
source=(http://download.gna.org/cryptodev-linux/cryptodev-linux-$version.tar.gz)

build() {
	cd $name-$version
	export REPORT_KERNEL=${release}TS_SMP

	make
	make install PREFIX=$PKG MODLIB=$PKG/$TSCOMPROOT/kernel_SMP/kernel/modules-${release}TS_SMP INSTALL_MOD_DIR=kernel/extra MODSECKEY=/etc/ssl/keys/kernel.key MODPUBKEY=/etc/ssl/certs/kernel.crt

	make clean

	export REPORT_KERNEL=${release}TS

	make
	make install PREFIX=$PKG MODLIB=$PKG/$TSCOMPROOT/kernel/kernel/modules-${release}TS INSTALL_MOD_DIR=kernel/extra MODSECKEY=/etc/ssl/keys/kernel.key MODPUBKEY=/etc/ssl/certs/kernel.crt

	chmod 644 $PKG/usr/include/crypto/cryptodev.h
}
