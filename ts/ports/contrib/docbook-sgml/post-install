# arg 1:  the new package version
post_install() {
        add_catalog "${1%-*}"
}

add_catalog() {
        install-catalog --add /etc/sgml/sgml-docbook-dtd-$1.cat \
                /usr/share/sgml/docbook-sgml-$1/catalog

        install-catalog --add /etc/sgml/sgml-docbook-dtd-$1.cat \
                /etc/sgml/sgml-docbook.cat
}

. /ts/ports/contrib/sgml-common/post-install
post_install "4.5"
