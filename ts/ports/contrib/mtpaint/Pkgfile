name=mtpaint
version=3.40
release=git-201606
#source=(http://downloads.sourceforge.net/project/mtpaint/mtpaint/$version/mtpaint-$version.tar.bz2 \
#	giflib.patch)

build() {
	git clone https://github.com/wjaguar/mtPaint.git
	cd mtPaint
	#patch -p0 -i $SRC/giflib.patch
	./configure --prefix=/ \
			--mandir=/usr/man \
			--disable-extras

	make
	make DESTDIR=$PKG install
}
