name=systemd-boot
version=236.81
release=1
source=(http://mirror.rit.edu/archlinux/core/os/x86_64/systemd-${version}-$release-x86_64.pkg.tar.xz)
build() {
	cd $SRC
	find . -type f |grep -v efi |xargs rm
	find . -type l -delete
	find . -empty -delete

	mv usr $PKG/.
}
