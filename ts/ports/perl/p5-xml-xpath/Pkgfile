# Description:	Parse and evaluate XPath statements.
# URL:		http://search.cpan.org/~manwar/XML-XPath/
# Maintainer:	
# Depends on:	p5-path-tiny p5-xml-parser

name=p5-xml-xpath
version=1.42
release=1
source=(http://search.cpan.org/CPAN/authors/id/M/MA/MANWAR/XML-XPath-${version}.tar.gz)

build() {
	cd XML-XPath-$version

	# PERL_MM_USE_DEFAULT=1 \
	perl Makefile.PL
	make OPTIMIZE="$CFLAGS" DESTDIR="$PKG" install

	find "$PKG" -depth \
		-type f \( -name .packlist -o -name \*.bs -o -name perllocal.pod \) -delete , \
		-type f -name autosplit.ix \( -exec grep -q '^[[:space:]]*package' {} \; -o -delete \) , \
		-type d -empty -exec rmdir {} +
}
