name=tzupdate
pname=tzupdate
version=pip
release=1
source=()

build() {
        pip3 download $name --no-binary :all: --no-deps
        mkdir -p $SRC/$name
        tar -xvf $SRC/*-*.* -C $SRC/$name || unzip -d $SRC/$name *-*.zip
        cd $SRC/$name/*

        python ./setup.py install --root $PKG
}

