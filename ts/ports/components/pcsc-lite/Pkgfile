name=pcsc-lite
version=1.8.20
release=1
source=(https://alioth.debian.org/frs/download.php/file/4203/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
			--sysconfdir=/etc \
			--mandir=/usr/man
	make
	make DESTDIR=$PKG install
}
