name=meld
version=3.20.1
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/meld/${version%.*}/meld-$version.tar.xz)

build() {
	cd $SRC
	mkdir -p $PKG/opt
	mkdir -p $PKG/usr/bin
	mv meld-* $PKG/opt/meld
	ln -sf /opt/meld/bin/meld $PKG/usr/bin/meld

#	./configure --prefix=/usr \
#			--sysconfdir=/etc \
#			--mandir=/usr/man \
#			--disable-extras
#
#	make
#	make DESTDIR=$PKG install
}
