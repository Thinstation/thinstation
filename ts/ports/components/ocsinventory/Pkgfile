name=ocsinventory
version=1.8.1
release=1
source=(https://github.com/jackburton79/ocs-agent/archive/v$version.tar.gz)

build() {
	cd ocs-agent-$version

	make
	mkdir -p $PKG/bin
	cp  ocsinventory-agent $PKG/bin/.
}
