name=mtpfs
version=1.1
release=4
source=(https://www.adebenham.com/files/mtp/${name}-${version}.tar.gz)

build() {
  cd "$SRC/$name-$version"

  ./configure --prefix=/usr
  make
  make DESTDIR="$PKG" install
}
