# Description: Gnome Partition Editor.
# URL: http://gparted.sourceforge.net/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Younes Hafri, ycrux atclub dash internet dot fr
# Depends on: gtkmm parted p5-xml-Parser xorg-libxcomposite xorg-xcb-util

name=gparted
version=1.0.0
release=1
source=(http://downloads.sourceforge.net/project/gparted/gparted/gparted-${version}/gparted-${version}.tar.gz)
up2date_url="http://sourceforge.net/projects/$name/files/"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		 \
		--disable-static \
		--disable-dependency-tracking \
		--disable-doc

	make
	make DESTDIR=$PKG install
#	rm -r $PKG/usr/share/locale
}
