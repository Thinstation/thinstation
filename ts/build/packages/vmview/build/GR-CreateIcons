#!/bin/bash
# Tool to create the standard icons for Vmware View

master=vmware-view.png
target=vmview.png

mainpath=extra/lib/icons/hicolor/


convert $master -resize  16x16   $mainpath/16x16/apps/$target
convert $master -resize  22x22   $mainpath/22x22/apps/$target
convert $master -resize  24x24   $mainpath/24x24/apps/$target

convert $master -resize  32x32   $mainpath/32x32/apps/$target

convert $master -resize  64x64   $mainpath/64x64/apps/$target
convert $master -resize  128x128 $mainpath/128x128/apps/$target
convert $master -resize  256x256 $mainpath/256x256/apps/$target



