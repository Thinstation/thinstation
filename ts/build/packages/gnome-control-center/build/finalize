#gnome-control-center 10
sed -i -e "s/wheel/$TSUSER/" /lib/polkit-1/rules.d/gnome-control-center.rules
for applet in \
	applications-panel \
skip_background-panel \
	bluetooth-panel \
	camera-panel \
	color-panel \
	control-center \
	datetime-panel \
	default-apps-panel \
	diagnostics-panel \
skip_display-panel \
	info-overview-panel \
	keyboard-panel \
	location-panel \
skip_lock-panel \
	microphone-panel \
	mouse-panel \
	network-panel \
	notifications-panel \
skip_online-accounts-panel \
	power-panel \
	printers-panel \
	region-panel \
skip_removable-media-panel \
skip_search-panel \
	sharing-panel \
	sound-panel \
	thunderbolt-panel \
skip_universal-access-panel \
	usage-panel \
skip_user-accounts-panel \
	wacom-panel \
	wifi-panel \
	; do
	if [ -e /lib/applications/gnome-$applet.desktop ]; then
		sed -i -e 's/OnlyShowIn=GNOME/OnlyShowIn=GNOME;XFCE/g' /lib/applications/gnome-$applet.desktop
	fi
done

