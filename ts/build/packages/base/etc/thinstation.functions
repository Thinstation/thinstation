	cat $1.tpl | sed -f /tmp/script > $1
    fi
}

# Log to file and console
echo_log ()
{
	local debug noline string

	until [ -z "$1" ]; do
		case "$1" in
		"-n")
			noline="-n"
		;;
		"-d")
			debug="TRUE"
		;;
		*)
			string="$1"
		;;
		esac
		shift
	done
	if [ -n "$debug" ] ; then
		echo -e $noline "$string" > $CONSOLE
	fi
	if [ -z "$APPLOG" ]; then
	  echo -e $noline "$string" >> $LOGFILE
	else
	  echo -e $noline "$string" >> $APPLOG
	fi
}

