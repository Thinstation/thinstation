#
# /etc/inputrc - global inputrc for readline(3)
#

set input-meta on
set output-meta on
set convert-meta off

"\e[1~": beginning-of-line
"\e[2~": yank
"\e[3~": delete-char
"\e[4~": end-of-line
"\e[5~": beginning-of-history
"\e[6~": end-of-history

"\ep": history-search-backward
"\en": history-search-forward

$if term=xterm
"\e[7~": beginning-of-line
"\e[8~": end-of-line
"\e[H": beginning-of-line
"\e[F": end-of-line
$endif

# End of file
